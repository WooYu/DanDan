<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.dhxgzs.goodluck.SharekActivity" >

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black_deep"
        android:paddingLeft="10dp" >

        <ImageView
            android:id="@+id/vipShare_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/img_fj_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="VIP分享"
            android:textColor="@color/dibu_bg"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/icon_fenxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/img_fenxiang" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/s_radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_gray"
        android:orientation="horizontal" >

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:maxLines="2"
            android:text="直接开户"
            android:visibility="invisible"
            android:textColor="@color/textview_selector"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/s_radio0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:maxLines="2"
            android:background="@drawable/vote_submit_bg_shouye5"
            android:text="直接开户"
            android:textColor="@color/textview_selector"
            android:textSize="16sp" />
        <TextView 
            android:layout_width="5dp"
            android:layout_height="30dp"
            /> 

        <RadioButton
            android:id="@+id/s_radio1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:maxLines="2"
            android:text="分享连接"
            android:background="@drawable/vote_submit_bg_shouye5"
            android:textColor="@color/textview_selector" 
            android:textSize="16sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:maxLines="2"
            android:visibility="invisible"
            android:text="直接开户"
            android:textColor="@color/textview_selector"
            android:textSize="16sp" />
    </RadioGroup>
    <LinearLayout 
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        
       <TextView 
           android:layout_width="0dp"
           android:layout_height="0.5dp"
           android:layout_weight="1"/>
       <TextView 
           android:layout_width="0dp"
           android:layout_height="0.5dp"
           android:layout_weight="10"
           android:background="@color/fengexian2"/>
       <TextView 
           android:layout_width="0dp"
           android:layout_height="0.5dp"
           android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.dhxgzs.goodluck.view.MyViewPager
            android:id="@+id/share_viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.dhxgzs.goodluck.view.MyViewPager>
    </LinearLayout>

</LinearLayout>
